@model List<Pin>



    <div class="container m-1">
        <h1 class="mt-3 text-center">All pins</h1>
    
        @foreach(Pin pin in Model)
        {
            <div class="card mt-3 rounded">
                <div class="d-flex justify-content-between align-items-center card-header">
                    <p class="lead m-0">@pin.Content</p>
                    <form
                    asp-controller="Pin"
                    asp-action="DeletePin"
                    asp-route-deletePinId="@pin.PinId"
                    method="POST"
                    >
                        <button class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
                <div class="card-body">
                    <div><small>Post Creator: @pin.Poster.FirstName @pin.Poster.LastName</small></div>
                    <div><small>Username: @pin.Poster.Username</small></div>
                    <div><small>Email: @pin.Poster.Email</small></div>
                    <div><small>Created on: @pin.CreatedAt</small></div>
                </div>
            </div>
        }
    </div>